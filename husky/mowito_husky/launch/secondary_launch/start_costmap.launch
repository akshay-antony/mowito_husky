<launch>

	<arg name="use_velodyne" default="false"/>

  <group if="$(arg use_velodyne)">
		<node name="costmap" pkg="costmap_2d" type="costmap_2d_node" output="log">
			<rosparam file="$(find mowito_husky)/config/costmap_config/costmap_common_params_velodyne.yaml" command="load" ns="local_costmap"/>
			<rosparam file="$(find mowito_husky)/config/costmap_config/local_costmap_params_velodyne.yaml" command="load"/>
			<rosparam file="$(find mowito_husky)/config/costmap_config/costmap_common_params_velodyne.yaml" command="load" ns="global_costmap"/>
			<rosparam file="$(find mowito_husky)/config/costmap_config/global_costmap_params.yaml" command="load"/>
		</node>
  </group>

  <group unless="$(arg use_velodyne)">
		<node name="costmap" pkg="costmap_2d" type="costmap_2d_node" output="log">
			<rosparam file="$(find mowito_husky)/config/costmap_config/costmap_common_params.yaml" command="load" ns="local_costmap"/>
			<rosparam file="$(find mowito_husky)/config/costmap_config/local_costmap_params.yaml" command="load"/>
			<rosparam file="$(find mowito_husky)/config/costmap_config/costmap_common_params.yaml" command="load" ns="global_costmap"/>
			<rosparam file="$(find mowito_husky)/config/costmap_config/global_costmap_params.yaml" command="load"/>
		</node>
  </group>

</launch>