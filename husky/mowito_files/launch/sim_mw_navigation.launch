<launch>
    <arg name="map_path" default="$(find mowito_files)/maps/playpen_map.yaml"/>
    <arg name="respawn" default="true"/>
    <arg name="debug" default="false"/>
    <arg name="world_name" default="mowito"/>
    <arg name="gui" default="true"/>


    <!-- NAVIGATION -->
    <!-- localization node-->
    <include file="$(find mowito_files)/include/start_mwpfl.launch">
        <arg name="map_address" value="$(arg map_path)"/>
        <arg name="robot_init_x" value="0"/>
        <arg name="robot_init_y" value="0"/>
        <arg name="robot_init_phi" value="0"/>
        <arg name="sim" value="true"/>
    </include>

    <!-- -for converting the odom msg to tf -->


    <!-- nav server-->
    <include file="$(find mowito_files)/include/start_nav_server.launch">
        <arg name="mission_executive_config" value="$(find mowito_files)/config/mission_executive_config/mission_executive_params.yaml"/>
        <arg name="respawn" value="$(arg respawn)"/>
        <arg name="gp_debug" value="$(arg debug)"/>
        <arg name="ctrl_debug" value="$(arg debug)"/>  
        <arg name="rcvr_debug" value="$(arg debug)"/>        
    </include>
    
       <node type="rviz" name="rviz" pkg="rviz" args="-d $(find mowito_files)/rviz/nav_map.rviz" />
</launch>
