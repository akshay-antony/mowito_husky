<launch>

    <arg name="scan_topic" default="/scan" /> 
    <arg name="laser_frame" default="base_laser" />
    <arg name="odom_frame" default="odom" />
    <arg name="base_frame" default="base_link" />
    <arg name="map_frame" default="map" />
    <arg name="cartographer" default="false" />
    <arg name="respawn" default="true"/>
    <arg name="debug" default="false"/>

    <arg name="world_name" default="mowito"/>
    <arg name="gui" default="true"/>
   
    <!-- NAVIGATION -->
    <!-- mapping node-->
    <group unless="$(arg cartographer)">
    <include file="$(find mowito_files)/include/start_mw_mapping.launch">
        <arg name="scan_topic" value="/scan" /> 
        <arg name="laser_frame" value="base_laser" />
        <arg name="odom_frame" value="odom" />
        <arg name="base_frame" value="base_link" />
        <arg name="map_frame" value="map" />
    </include>
    </group>

    <group if="$(arg cartographer)">
    <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find mowito_files)/config/carto_config
          -configuration_basename husky.lua"
      output="screen">
    	<remap from="imu" to="imu/data" />
    	<remap from="odom" to="odometry/filtered" />
    </node>

    <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" />
    </group>

    <!-- nav server-->
    <include file="$(find mowito_files)/include/start_nav_server.launch">
        <arg name="mission_executive_config" value="$(find mowito_files)/config/mission_executive_config/standard_nav.yaml"/>
        <arg name="respawn" value="$(arg respawn)"/>
        <arg name="gp_debug" value="$(arg debug)"/>
        <arg name="ctrl_debug" value="$(arg debug)"/>
        <arg name="rcvr_debug" value="$(arg debug)"/>  
    </include>

   <node type="rviz" name="rviz" pkg="rviz" args="-d $(find mowito_files)/rviz/nav_no_map.rviz" />
</launch>
